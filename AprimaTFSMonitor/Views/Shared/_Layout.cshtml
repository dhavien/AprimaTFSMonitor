<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Scripts/dist/css/bootstrap.min.css">
    <script src="~/Scripts/dist/jquery/dist/jquery.slim.min.js"></script>
    <script src="~/Scripts/dist/bootstrap/js/dist/popover.js"></script>
    <script src="~/Scripts/dist/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="navbar navbar-dark bg-dark navbar-expand-lg" role="navigation">
        <a class="navbar-brand" href="#">Aprima TFS Monitor</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item" ng-class="{ active: isActive('/') }">
                    <a class="nav-link" href="#">
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        Graphs
                    </a>
                </li>
            </ul>
        </div>

        <ul class="navbar-nav justify-content-end">
            <li class="nav-item">
                <a class="nav-link" href="#">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Logout</a>
            </li>
        </ul>
    </div>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>

        </footer>
    </div>

</body>
</html>
